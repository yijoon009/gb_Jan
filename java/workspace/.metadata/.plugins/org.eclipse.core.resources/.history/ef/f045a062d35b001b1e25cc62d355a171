	Scanner sc = new Scanner(System.in);
	
	//계좌개설
	void createAcc() {
		String name = null, pw = null, account = null, phone = null;
		Bank[] arNewMember = {new Shinhan(), new Kookmin(), new Woori()};
		
		System.out.println("예금주를 입력하세요");
